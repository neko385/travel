<% travel_memory.travel_memory_comments.each do |travel_memory_comment| %>
  <div>
    <%= travel_memory_comment.customer.screen_name %>
    <%= travel_memory_comment.created_at.strftime('%Y/%m/%d') %>
    <%= travel_memory_comment.comment %>
    <% if travel_memory_comment.customer == current_customer %>
      <%= link_to '削除', travel_memory_travel_memory_comment_path(travel_memory_comment.travel_memory, travel_memory_comment), method: :delete, remote: true %>
    <% end %>
  </div>
<% end %>