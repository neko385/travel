<h1>Admin::Customers#edit</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
      <table>
        <tr>
          <th>ユーザー名</th>
          <td><%= f.text_field :screen_name %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_kana %></td>
          <td><%= f.text_field :first_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.email_field :email %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td>
            <%= f.radio_button :is_deleted, "false" %>
            <%= f.label :is_deleted, "有効" %>
          </td>
          <td>
            <%= f.radio_button :is_deleted, "true" %>
            <%= f.label :is_deleted, "退会" %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "編集する" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
