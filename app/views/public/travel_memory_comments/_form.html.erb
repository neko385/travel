<%= form_with(model: [travel_memory, travel_memory_comment], local: false) do |f| %>
  <%= render 'public/travel_memory_comments/error_messages', obj: travel_memory_comment %>
  <%= f.text_area :comment, rows:'5', placeholder: 'コメントをここに', class: 'w-100 comment-textarea' %>
  <%= f.submit '送信する' %>
<% end %>