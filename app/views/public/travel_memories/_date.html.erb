      <!--いいね機能非同期通信-->
        <p id="favorite_<%= travel_memory.id %>">
          <%= render 'public/favorites/btn', travel_memory: travel_memory %>
        </p>
      <% end %>
      </td>
    </tr>
    <tr>
      <td><%= link_to '詳細を見る', travel_memory_path(travel_memory.id) %></td>
    </tr>
    <% end %>
  </tbody>

</table>