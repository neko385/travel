<% if customers.exists? %>
  <table class="table">
    <thead>
      <tr>
        <th>ユーザー名</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <% customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= link_to customer.screen_name, customer_path(customer) %></td>

          <td>フォロー数:<%= customer.followings.count %></td>
          <td>フォロワー数:<%= customer.followers.count %></td>
          <td><%= link_to "ユーザーを見る", customer_path(customer) %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
<% else %>
  <p>ユーザーはいません</p>
<% end %>