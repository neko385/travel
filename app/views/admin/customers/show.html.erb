<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 mt-5">
      <table class="table mt-3">
        <h3>会員詳細</h3>
        <tr>
          <th>ユーザー名</th>
          <td colspan="2"><%= @customer.screen_name %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %></td>
          <td><%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_kana %></td>
          <td><%= @customer.first_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td colspan="2"><%= @customer.email %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td colspan="2">
            <% if @customer.is_deleted %>
              退会済み
            <% else %>
              有効
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-sm btn-success"%></td>
          <td><%= link_to "一覧へ戻る", admin_customers_path, class: "btn btn-sm btn-primary"%></td>
        </tr>
      </table>
    </div>
  </div>
</div>
