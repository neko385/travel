<div class="container">
  <div class="row">
    <div class="col-md-2" style="margin-top: 50px;">
      <% if current_customer == @customer.id %>
        <h3>マイページ</h3>
      <% else %>
        <h3>会員詳細</h3>
      <% end %>
      <p>ユーザー名<%= @customer.screen_name %></p>
      <% if current_customer != @customer %>
        <p><%= render 'public/relationships/btn', customer: @customer %></p>
      <% else %>
        <% if @customer.screen_name != "guestuser" %>
          <%= link_to "登録情報編集", edit_customer_path(@customer) %>
        <% end %>
      <% end %>
      <p>フォロー：<%= link_to @customer.followings.count, customer_followings_path(@customer) %></p>
      <p>フォロワー：<%= link_to @customer.followers.count, customer_followers_path(@customer) %></p>
      <p><%= link_to "お気に入り一覧", favorites_customer_path(@customer) %></p>
    </div>
    <div class="col-md-10 d-flex flex-wrap" style="margin-top: 50px;">
      <% if current_customer.id == @customer.id %>
        <h4>My投稿</h4>
      <% else %>
        <h4><%= @customer.screen_name %>さんの投稿</h4>
      <% end %>

      <% @travel_memories.each do |travel_memory| %>
        <div class="box">
          <p><%= image_tag travel_memory.get_image, size: "150x150" %></p>

          <p>場所:<%= travel_memory.place %></p>

          <p style="width: 200px">紹介文<br>
          <%= travel_memory.introduction %>
          </p>
          <p><%= link_to "詳細を見る", travel_memory_path(travel_memory.id) %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>

